<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RegisterFragment">

    <TextView
        android:id="@+id/reg_welcometext"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textSize="60dp"
        android:text="@string/welcome"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/reg_usr_label"
        app:layout_constraintTop_toBottomOf="@id/reg_welcometext"
        android:text="@string/username"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/reg_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/reg_usr_label"


        android:textAlignment="center"
        android:textSize="30dp"

        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/reg_pwd_label"
        app:layout_constraintTop_toBottomOf="@id/reg_username"
        android:text="@string/password"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/reg_pwd_label"


        android:textAlignment="center"
        android:textSize="30dp"

        android:inputType="textPassword" />


    <TextView
        android:id="@+id/reg_repeatpwd_label"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:layout_constraintTop_toBottomOf="@+id/reg_password"
        android:text="@string/repeat_password"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/reg_repeatpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/reg_repeatpwd_label"


        android:textAlignment="center"
        android:textSize="30dp"

        android:inputType="textPassword" />


    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/reg_repeatpassword"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/color_selector"
        android:text="@string/register"/>

</androidx.constraintlayout.widget.ConstraintLayout>