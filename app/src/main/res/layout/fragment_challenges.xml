<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChallengesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/challenges_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/app_logout_btn"
        />
    <Button
        android:id="@+id/app_logout_btn"

        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintWidth_percent="50"
        android:text="@string/logout"/>
    <Button
        android:id="@+id/add_challenge_btn"

        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/app_logout_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintWidth_percent="50"
        android:text="@string/add_challenge"/>

</androidx.constraintlayout.widget.ConstraintLayout>